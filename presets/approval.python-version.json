{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "require Dependency Dashboard approval for python version updates",
    "packageRules": [
        {
            "automerge": false,
            "dependencyDashboardApproval": true,
            "matchPackageNames": [
                "python"
            ],
            "rangeStrategy": "auto"
        }
    ]
}
