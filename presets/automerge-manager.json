{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "automerge PRs for a manager - <code>{{arg0}}</code>",
    "packageRules": [
        {
            "automerge": true,
            "automergeType": "pr",
            "matchManagers": [
                "{{arg0}}"
            ],
            "platformAutomerge": true,
            "rangeStrategy": "bump"
        },
        {
            "automerge": false,
            "automergeType": "pr",
            "matchDepTypes": [
                "dependencies"
            ],
            "matchManagers": [
                "{{arg0}}"
            ],
            "rangeStrategy": "auto"
        }
    ]
}
