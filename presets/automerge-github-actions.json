{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "automerge github actions and runner updates",
    "packageRules": [
        {
            "addLabels": [
                "changelog:skip"
            ],
            "automerge": true,
            "automergeType": "pr",
            "ignorePaths": [
                "action.yaml",
                "action.yml"
            ],
            "matchManagers": [
                "github-actions"
            ]
        }
    ]
}
