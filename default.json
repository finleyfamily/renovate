{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "configMigration": true,
    "dependencyDashboardLabels": [
        "renovate"
    ],
    "description": [
        "Renovate configuration created by @ITProKyle"
    ],
    "extends": [
        ":dependencyDashboard",
        ":pinDevDependencies",
        ":prImmediately",
        ":rebaseStalePrs",
        ":renovatePrefix",
        "config:recommended",
        "docker:pinDigests",
        "github>finleyfamily/renovate//presets/add-labels",
        "github>finleyfamily/renovate//presets/automerge-github-actions"
    ],
    "packageRules": [
        {
            "addLabels": [
                "dev-dependencies"
            ],
            "automerge": true,
            "automergeType": "pr",
            "description": "automerge dev dependencies",
            "gitLabIgnoreApprovals": true,
            "matchDepTypes": [
                "dev",
                "dev-dependencies",
                "devDependencies",
                "docs",
                "lint",
                "linters",
                "test",
                "types"
            ],
            "prPriority": -1,
            "rangeStrategy": "bump"
        }
    ],
    "platformAutomerge": true,
    "separateMinorPatch": false,
    "separateMultipleMajor": true
}
